{
  "name": "replicache-nextjs",
  "version": "0.1.0",
  "description": "Generic Replicache backend on Next.js",
  "homepage": "https://github.com/rocicorp/replicache-nextjs",
  "repository": "github:rocicorp/replicache-nextjs",
  "license": "Apache-2.0",
  "scripts": {
    "format": "prettier --write 'src/*.{js,jsx,json,ts,tsx,html,css,md}' '*.{cjs,js,jsx,json,ts,tsx,html,css,md}'",
    "check-format": "prettier --check 'src/*.{js,jsx,json,ts,tsx,html,css,md}' '*.{cjs,js,jsx,json,ts,tsx,html,css,md}'",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx src/",
    "build-cjs": "tsc --module commonjs --outDir out",
    "build-esm": "tsc --module ESNext --outDir out && mv out/frontend/index.js out/frontend/index.mjs && mv out/backend/index.js out/backend/index.mjs",
    "build": "npm run build-esm && npm run build-cjs",
    "prepack": "npm run lint && npm run test && npm run build",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/**/*.test.ts'"
  },
  "dependencies": {
    "pg": "^8.7.3",
    "@supabase/supabase-js": "^1.35.3",
    "@rocicorp/logger": "^2.2.0",
    "@rocicorp/rails": "^0.2.1",
    "next": "^12.1.6",
    "react": "17.0.2"
  },
  "peerDependencies": {
    "react": "17.0.2",
    "next": "^12.1.6",
    "react-dom": "17.0.2",
    "replicache": "^11.0.0",
    "pg-mem": "^2.5.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.18.0",
    "chai": "^4.3.6",
    "mocha": "^9.2.1",
    "prettier": "^2.2.1",
    "nanoid": "^3.3.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.1.5",
    "zod": "^3.17.3",
    "classnames": "^2.3.1",
    "eslint": "^8.2.0",
    "@types/node": "^14.14.37",
    "@types/pg": "^8.6.4",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^18.0.5",
    "pg-mem": "^2.5.0"
  },
  "files": [
    "out/*",
    "!out/*.test.*"
  ],
  "exports": {
    "./out/backend": {
      "import": "./out/backend/index.mjs",
      "require": "./out/backend/index.js",
      "types": "./out/backend/index.d.ts"
    },
    "./out/frontend": {
      "import": "./out/frontend/index.mjs",
      "require": "./out/frontend/index.js",
      "types": "./out/frontend/index.d.ts"
    },
    "./out/backend/supabase": {
      "import": "./out/backend/supabase.mjs",
      "require": "./out/backend/supabase.js",
      "types": "./out/backend/supabase.d.ts"
    }
  }
}
